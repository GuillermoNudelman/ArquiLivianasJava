    </bean>
        
    <bean id="convenioService" class="org.springframework.remoting.rmi.RmiProxyFactoryBean">
        <property name="serviceUrl" value="rmi://localhost:1199/ConvenioService" />
        <property name="serviceInterface" value="uy.edu.ort.service.ConvenioService" />
    </bean>
        
    <bean id="clienteService" class="org.springframework.remoting.rmi.RmiProxyFactoryBean">
        <property name="serviceUrl" value="rmi://localhost:1199/ClienteService" />
        <property name="serviceInterface" value="uy.edu.ort.service.ClienteService" />
    </bean>
        
    <bean id="entregaService" class="org.springframework.remoting.rmi.RmiProxyFactoryBean">
        <property name="serviceUrl" value="rmi://localhost:1199/EntregaService" />
